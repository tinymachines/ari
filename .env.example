# ARI - AWS Resource Inventory Configuration
# Copy this file to .env and customize values

# AWS Credentials
# Leave blank to use from ~/.aws/credentials
AWS_ACCESS_KEY=
AWS_SECRET_KEY=
AWS_PROFILE=default

# AWS Service Configuration
AWS_REGION=us-east-1
AWS_REGIONS=us-east-1,us-west-2,eu-west-1

# Database Configuration
DB_PATH=aws_inventory.db

# Execution Options
# Set to true to only map AWS CLI commands
MAP_ONLY=false
# Set to true to only collect resource inventory
INVENTORY_ONLY=false

# Resource Scanning Options
# Comma-separated list of services to scan (leave empty for all services)
SERVICES=
# Maximum number of resources to collect per service (0 for unlimited)
MAX_RESOURCES=0
# Maximum threads for concurrent resource collection
MAX_THREADS=5